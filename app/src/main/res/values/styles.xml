<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme">
        <!-- Customize your theme here. -->
    </style>

    <style name="Base.Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:windowBackground">@color/window_background</item>


    </style>

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Base.Theme">
        <item name="android:textColorPrimary">@android:color/white</item> <!-- for title color-->
        <item name="android:textColorSecondary">@android:color/white</item> <!-- for overflow menu button-->
        <item name="android:textColor">@color/android_gray_dark</item> <!-- for overFlow menu item textColor-->
        <item name="android:maxHeight">30dp</item>
    </style>



    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:padding">@dimen/medium_margin</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MaterialDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/accentColor</item>
    </style>


</resources>
